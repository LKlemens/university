<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="balls.Controller"
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10"  vgap="10" stylesheets="/balls/main.css">
   <Canvas fx:id="canvas" GridPane.columnIndex="0" GridPane.rowSpan="6" width="800" height="600" onMousePressed="#mousePressed"/>
  <Button GridPane.columnIndex="1" GridPane.rowIndex="1" text="AddBall" onAction="#addBall" minWidth="100"/>
</GridPane>
